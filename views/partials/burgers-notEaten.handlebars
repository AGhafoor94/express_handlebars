{{#unless eaten}}
<div class="card ">
    <div class="card-content rightBorder">
        <li class="burgerList">
            <p class="subtitle name">{{burger_name}}</p>
            <footer class="card-footer">
                <form action="/api/burgers" method="PUT">
                    <button onClick="updateItem(this)" type="submit" class="button is-warning eatBtn reloadButton"
                        data-id="{{id}}" data-eaten="{{eaten}}">Eat</button>
                </form>
            </footer>
        </li>
    </div>
</div>
{{/unless}}